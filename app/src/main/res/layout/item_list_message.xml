<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/container_border">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_title_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_list_detail_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Message"
            android:textSize="14sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorGreySolid"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_time_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:text="07:30"
            android:textSize="12sp"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/colorGrey"/>

    </LinearLayout>

</LinearLayout>